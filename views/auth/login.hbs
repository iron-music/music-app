<div id="login-form" class="container-single-post">
      <form class="auth-form" action="/login" method="POST">
      <h2>Log In</h2>
      <label> Username</label>
        <input class="input-auth" type="text" name="username" placeholder="Your username" />
      <label> Password </label>
        <input class="input-auth" type="password" name="password" placeholder="Your password" />
      <button type="submit" class="btn align-self">Log In</button>
      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
</div>