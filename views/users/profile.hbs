<main class="profile-container">
    {{#each posts}}
    <div class="card">
        <div class="button-container">
            <div></div>
            <div>
                <a href="/{{this.owner._id}}/edit"><button>edit</button></a>
                <a href="/{{this._id}}/deleting"><button>delete</button></a>
            </div>
        </div>
        <div>
            <h3>{{this.title}}</h3>
            <h4>{{this.artist}}</h4>
        </div>
        <audio controls load src={{this.previewURI}}></audio>
        <img src={{this.imageURL}}>
        <div class="post-content">
            <span class="post-username">{{this.owner.username}}</span>
            <p class="postText">{{this.postText}}</p>
        </div>

        <div>
            <span class="star-rating">
                <form action="/rate/{{this._id}}" method="POST">
                    
                    <div><label for="rate-1" ><i class="fa fa-star"></i></label>
                    <input type="radio" name="rating"  value="1">
                    <label for="rate-2" ><i class="fa fa-star "></i></label>
                    <input type="radio" name="rating"  value="2">
                    <label for="rate-3" ><i class="fa fa-star"></i></label>
                    <input type="radio" name="rating"  value="3">
                    </div>
                    <div>
                        <button type="submit">VOTE!</button>
                    </div>
                </form>
        </div>



    </div>
    {{/each}}
</main>