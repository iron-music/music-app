<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/crud.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>

  <body>
    <nav>
      <ul class="navbar">
        {{#if userLocals.username}}
        <div class="profile-info">
          <li class="circular--portrait">
            <img class="profile-pic" src="{{userLocals.imageUrl}}" alt="profile picture">
          </li>
          <li class="to-left">
              <a id="header-username" href="/{{userLocals.username}}">{{userLocals.username}}</a>
          </li>
          <li class="to-left">
            <a href="/{{userLocals.username}}/edit-user" style="">&nbsp;edit user</a>
          </li>
        </div>
          {{/if}}
        {{#if userLocals.username}}
          <li class="to-right">
            <a href="/logout">Log out</a>
          </li>
        {{/if}}
        {{#unless userLocals.username}}
          <li class="to-right">
            <a href="/signup">Sign up</a>
          </li>
          <li class="to-right">
            <a href="/login">Log in</a>
          </li>
        {{/unless}}
      </ul>
    </nav>

    {{{body}}}

    <script src="/js/script.js"></script>
  </body>

</html>